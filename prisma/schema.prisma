generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // از متغیر محیطی استفاده می‌کنیم
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  chatId    String   @unique
  firstName String?
  lastName  String?
  username  String?
  createdAt DateTime @default(now())
}
